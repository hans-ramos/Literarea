                <div class="collapse navbar-collapse" id="navcol-1" style="color: rgb(255,255,255);">
                    <ul class="nav navbar-nav ml-auto">
                        <li class="nav-item" role="presentation">
                            <a class="nav-link" href="/" style="color: rgb(255,255,255);"> Home </a>
                        </li>
                        {{#if username}}
