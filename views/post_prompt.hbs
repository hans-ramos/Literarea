        <div class="post-story-form">
            <form>
                <div class="form-group">
                  <label for="exampleFormControlInput1">Prompt</label>
                  <input type="text" class="form-control" id="storyTitle" placeholder="discuss your prompt">
                </div>
                <div class="form-group">
                  <label for="exampleFormControlSelect1">Genre</label>
                  <select class="form-control" id="storyGenre">
                    <option value="" disabled selected hidden>select genre</option>
                    <option value="adventure">Adventure</option>
                    <option value="mystery">Mystery</option>
                    <option value="horror">Horror</option>
                  </select>
                </div>
                <button type="submit" class="btn btn-primary" style="background-color: #1e2022; color: white">Submit</button>
              </form>
        </div>

